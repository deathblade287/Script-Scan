{
  "manifest_version": 3,
  "name": "Script Scan",
  "version": "0.0.1",
  "description": "Summarizes code files hosted on github so that you don't have to waste time reading before you start writing. ",
  "permissions": ["activeTab", "tabs"],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Script Scan"
  },
  "background": {
    "service_worker": "background.js"
  }
}
